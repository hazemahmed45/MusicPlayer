<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.hazem.musicplayer.Features.Activity.MainScreen">
    <com.qiushui.blurredview.BlurredView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/blurmain"></com.qiushui.blurredview.BlurredView>
    <com.mancj.materialsearchbar.MaterialSearchBar
        android:id="@+id/song_searchview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:mt_hint="Search"
        app:mt_maxSuggestionsCount="0"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <ListView
        android:id="@+id/song_list_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/include"
        android:layout_below="@+id/song_searchview"></ListView>
    <include
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/mainscreen_extension"
        android:id="@+id/include"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

    </include>





</RelativeLayout>
