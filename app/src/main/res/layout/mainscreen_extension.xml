<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shapes"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/mainscreen_play"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/mainscreen_last"
        android:layout_marginEnd="18dp"
        android:layout_marginRight="18dp"
        android:layout_toLeftOf="@+id/mainscreen_first"
        android:layout_toStartOf="@+id/mainscreen_first"
        app:srcCompat="@android:drawable/ic_media_pause" />

    <ImageView
        android:id="@+id/mainscreen_last"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="18dp"
        android:layout_marginRight="18dp"
        android:layout_marginTop="13dp"
        android:layout_toLeftOf="@+id/mainscreen_play"
        android:layout_toStartOf="@+id/mainscreen_play"
        app:srcCompat="@android:drawable/ic_media_previous" />

    <ImageView
        android:id="@+id/mainscreen_first"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/mainscreen_play"
        android:layout_marginEnd="19dp"
        android:layout_marginRight="19dp"
        app:srcCompat="@android:drawable/ic_media_next" />


    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="60dp"

        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/mainscreen_last"
        android:layout_toStartOf="@+id/mainscreen_last">

        <TextView
            android:id="@+id/mainscreen_songtitle"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentTop="true"
            android:gravity="left|right|center_horizontal|center_vertical"
            android:maxLines="1"
            android:scrollHorizontally="true"
            android:singleLine="true"
            android:text="TextView"
            android:textAlignment="center"
            android:textColor="#ffffff"
            android:layout_toRightOf="@+id/imageView2"
            android:layout_toEndOf="@+id/imageView2" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="5dp"
            android:layout_alignParentTop="true"
            app:srcCompat="@drawable/songicon" />
    </RelativeLayout>

</RelativeLayout>